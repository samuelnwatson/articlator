<div class="container">
  <div class="col-sm-4">
    <h4>Articles: </h4>
    <ul>
      <% @articles.each do |article| %>
        <li><%= link_to "#{article.title}", article_path(article) %></li>
      <% end %>
    </ul>
  </div>

  <% if current_user %>
    <div class="col-sm-4">
      <h4>Create a new article</h4>
      <%= link_to "new article", new_article_path %>
    </div>
  <% end %>
</div>
